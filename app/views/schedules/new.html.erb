<div class="width">
  <h3>予定の新規追加</h3>
  <%= render "shared/error", obj: @schedule%>

  <%= form_with model: @schedule do |f| %>
      <table class="form">
        <tr>
          <th class="layout"><%= f.label :title ,"タイトル" %></th>
        </tr>
        <tr>
          <td><%= f.text_field :title ,placeholder: 'タイトル', class: "form-control",size:"60"%></td>
        </tr>

        <div class="row">
          <tr>
            <th class="col-md-6 layout"><%= f.label :start_day ,"開始日" %></th>
            <th class="col-md-6 layout"><%= f.label :end_day ,"終了日" %></th>
          </tr>
        </div>
        <div class="row">
          <tr>
            <td class="col-md-6"><%= f.date_field :start_day , class: "form-control"%></td>
            <td class="col-md-6"><%= f.date_field :end_day , class: "form-control" %></td>
          </tr>
        </div>

        <tr>
          <td class="layout"><strong>終日  </strong><%= f.check_box :all_day %></td>
        </tr>
        
        <div>
          <tr>
            <th class="layout"><%= f.label :memo ,"スケジュールメモ" %></th>
          </tr>
          <tr>
            <td><%= f.text_area :memo ,class: 'form-control', size: "60x5"%></td>
          </tr>
        </div>
      </table>

    <div>
      <ul class="button">
        <li class="list-unstyled"><%= f.submit "登録", class: 'btn btn-default btn-primary' %></li>
        <li class="list-unstyled"><%= link_to "キャンセル", schedules_path, class: 'btn btn-default' %></li>
      </ul>
    </div>
  <% end %>
</div>
